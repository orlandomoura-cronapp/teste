<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="app" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <non-jta-data-source>java:comp/env/jdbc/main</non-jta-data-source>
        <class>app.entity.CategoriaInstrumento</class>
        <class>app.entity.Instrumento</class>
        <class>app.entity.Candidato</class>
        <class>app.entity.Comum</class>
        <class>app.entity.Avaliadores</class>
        <class>app.entity.Evento</class>
        <class>app.entity.Situacao</class>
        <class>app.entity.TipoMinisterio</class>
        <class>app.entity.MinisterioPalavra</class>
        <class>app.entity.Avaliacao</class>
        <class>app.entity.TipoAvaliacao</class>
        <class>app.entity.User</class>
        <class>app.entity.Role</class>
        <properties>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
        </properties>
    </persistence-unit>
</persistence>
